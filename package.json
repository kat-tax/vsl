{
  "private": true,
  "name": "vslite",
  "version": "1.2.0",
  "description": "More than Monaco, less than VSCode.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "predeploy": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kat-tax/vslite.git"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@webcontainer/api": "^1.1.7",
    "dockview": "^1.8.4",
    "monaco-editor": "^0.39.0",
    "monaco-editor-auto-typings": "^0.4.4",
    "preact-custom-element": "^4.3.0",
    "react": "npm:@preact/compat@^17.1.2",
    "react-complex-tree": "^2.2.2",
    "react-dom": "npm:@preact/compat@^17.1.2",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.7.0",
    "y-monaco": "^0.1.4",
    "y-webrtc": "^10.2.5",
    "yjs": "^13.6.8"
  },
  "devDependencies": {
    "@types/node": "^20.8.6",
    "@types/preact-custom-element": "^4.0.2",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitejs/plugin-react-swc": "^3.4.0",
    "gh-pages": "^6.0.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-node-polyfills": "^0.9.0",
    "vite-plugin-rewrite-all": "^1.0.1"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": false,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "printWidth": 200
  }
}
